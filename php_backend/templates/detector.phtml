                    <td class="<?= $style_classes ?> right">
                        <?= $new_version ? htmlspecialchars($run['number_of_findings']) : ""; ?></td>
                    <td class="<?= $style_classes ?> right">
                        <?= $new_version ? htmlspecialchars(substr($run['runtime'], 0, 4)) . "s" : ""; ?></td>
                    <td class="<?= $style_classes ?>">
