                                (<i class="fa fa-question-circle" aria-hidden="true" style="color:blue;" title="Need Clarification"></i>)
                            <?php endif; ?>
                            </a>
                        <?php else: ?>
                            <a href="<?= $review_url; ?>" class="<?= $button_classes ?>">review</a>
                        <?php endif; ?>
                    </td>
                    <td class="<?= $style_classes ?>" style="max-width: 300px;">
