                <?php
                $classes = [];
                if($new_project) $classes[] = "top";
                if(!$misuse->hasPotentialHits()) $classes[] = "no-hit";
                $style_classes = implode(" ", $classes);
                ?>
                <tr>
                    <td class="<?= $style_classes ?>">
                        <?= $new_project ? htmlspecialchars($project) : ""; ?></td>
                    <td class="<?= $style_classes ?>">
                        <?= $new_version ? htmlspecialchars($version) : ""; ?></td>
                    <td class="<?= $style_classes ?>">
